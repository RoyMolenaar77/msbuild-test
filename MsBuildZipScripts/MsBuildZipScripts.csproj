  <!-- To modify your build process, add your task inside one of the targets below and uncomment it. 
       Other similar extension points exist, see Microsoft.Common.targets. -->
	
	<Target Name="BeforeBuild">
	</Target>
	
	<Target Name="AfterBuild">	
	</Target>
	
	<Target Name="Zip">
		<ItemGroup>
		  <Files Include="$(MSBuildProjectDirectory)\Host\*.exe;$(MSBuildProjectDirectory)\Host\*.dll" Exclude="$(MSBuildProjectDirectory)\Host\*.config;$(MSBuildProjectDirectory)\Host\*.pdb;$(MSBuildProjectDirectory)\Host\*.xml">
			<Group>CONCENTRATOR</Group>
		  </Files>
		  <Files Include="$(MSBuildProjectDirectory)\Web\*" Exclude="$(MSBuildProjectDirectory)\Web\*.config;$(MSBuildProjectDirectory)\Web\*.pdb;$(MSBuildProjectDirectory)\Web\*.xml">
			<Group>CONCENTRATOR</Group>
		  </Files>
		  <Files Include="$(MSBuildProjectDirectory)\..\OnzinDll\bin\Release\*.dll">
			<Group>CONCENTRATOR</Group>
		  </Files>

		  <OutputDirectory Include="output\" />
		</ItemGroup>
		<MakeDir Directories="@(OutputDirectory)" />
		<PropertyGroup>
		  <WorkingDir>%(OutputDirectory.Fullpath)</WorkingDir>
		  <ZipFileName>Release</ZipFileName>
		</PropertyGroup>
				
		<!--Clean up old zip files from OutputDirectory-->
		<Delete Files="@(fileToDelete)" />
		
		<MSBuild.ExtensionPack.Compression.Zip TaskAction="Create" CompressFiles="@(Files)" CompressionLevel="BestCompression" ZipFileName="$(WorkingDir)$(ZipFileName)_$(BuildMajor).$(BuildMinor).$(BuildVersion).$(BuildRevision)_%(Files.Group).zip" />

        <!-- Set a thread to sleep for a period -->
        <MSBuild.ExtensionPack.Framework.Thread TaskAction="Sleep" Timeout="2000"/>

	</Target>
	
	<Target Name="FTP">
		<Message Text="TheFiles: @(FilesToUpload)" Importance="high" />
				
		<MSBuild.ExtensionPack.Communication.Ftp TaskAction="CreateDirectory" Host="$(FtpHost)" UserName="$(FtpUser)" UserPassword="$(FtpPass)" RemoteDirectoryName="$(IP)_$(PORT)"/>
		<MSBuild.ExtensionPack.Communication.Ftp TaskAction="UploadFiles" Host="$(FtpHost)" FileNames="@(FilesToUpload)" UserName="$(FtpUser)" UserPassword="$(FtpPass)" RemoteDirectoryName="$(IP)_$(PORT)"/>
	</Target>
	
	<Target Name="DD" DependsOnTargets="ZIP;FTP;SQL">	
		<Exec ContinueOnError="True" Command='$(MSBuildProjectDirectory)\tools\DD.exe /execute="$(ScriptLocation)" /target="$(IP):$(Port)" /token="$(Token)"'>
			<Output TaskParameter="ExitCode" PropertyName="ErrorCode"/>
		</Exec>		
		<Message Importance="high" Text="$(ErrorCode)"/>
	</Target>		
	
	<Target Name="SQL">
		<MSBuild.ExtensionPack.SqlServer.SqlExecute TaskAction="Execute" Retry="true" UseTransaction="true" Files="@(SqlScripts)" ConnectionString="$(ConnectionString)" Parameters="@(Par1);@(Par2);@(Par3);@(Par4)"/>			
    </Target>
	
	<Target Name="Email" AfterTargets="DD">
	     <MSBuild.ExtensionPack.Communication.Email TaskAction="Send" Subject="$(Subject)" UserName="$(EmailUser)" UserPassword="$(EmailPwd)" EnableSsl="true" Priority="$(Priority)" SmtpServer="$(SmtpServer)" Port="$(EmailPort)" MailFrom="$(MailFrom)" MailTo="@(Recipient)" Body="$(BodyText)" Attachments="@(Attachment)"/>		
	</Target>
</Project>














