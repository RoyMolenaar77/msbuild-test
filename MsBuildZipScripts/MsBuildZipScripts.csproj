<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
	
	<!--These parameters are used to generate the Artifacts.Zip-->
  	<PropertyGroup>
		<BuildMajor>2</BuildMajor>
		<BuildMinor>6</BuildMinor>
		<BuildVersion>0</BuildVersion>
		<BuildRevision>0</BuildRevision> <!--This parameter is overwritten by TeamCity-->
		<ScriptLocation>C:\Deployment\$(IP)_$(Port)\deploy-concentrator.bat</ScriptLocation>
   </PropertyGroup>
   
   <ItemGroup>
		<MailFrom Include="r.molenaar@diract-it.nl"/>
		<Recipient Include="r.molenaar@diract-it.nl"/>
		<!--<Recipient Include="nospam2@freet2odev.com"/>-->
		<Attachment Include="$(MSBuildProjectDirectory)\output\*.zip"/>
		<!--<Attachment Include="C:\demo2.txt"/>-->
		
		
	
		
  </ItemGroup>
      
  <PropertyGroup>
    <TPath>$(MSBuildProjectDirectory)\ExtensionPack\$(MSBuildToolsVersion)\MSBuild.ExtensionPack.tasks</TPath>
    <TPath Condition="Exists('$(MSBuildProjectDirectory)\ExtensionPack\$(MSBuildToolsVersion)\MSBuild.ExtensionPack.tasks')">$(MSBuildProjectDirectory)\ExtensionPack\$(MSBuildToolsVersion)\MSBuild.ExtensionPack.tasks</TPath>
    <SccProjectName>SAK</SccProjectName>
    <SccLocalPath>SAK</SccLocalPath>
    <SccAuxPath>SAK</SccAuxPath>
    <SccProvider>SAK</SccProvider>
  </PropertyGroup>
  <Import Project="$(TPath)" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{FC5E1F0A-0228-4358-9DE8-F068268DAEF2}</ProjectGuid>
    <OutputType>Exe</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>MsBuildZipScripts</RootNamespace>
    <AssemblyName>MsBuildZipScripts</AssemblyName>
    <TargetFrameworkVersion>v4.0</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <PlatformTarget>x64</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Xml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Program.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <!-- To modify your build process, add your task inside one of the targets below and uncomment it. 
       Other similar extension points exist, see Microsoft.Common.targets. -->
	<Target Name="BeforeBuild">
	</Target>
	<Target Name="AfterBuild">
	</Target>
	
	<Target Name="GenerateZip">
		<ItemGroup>
		  <Files Include="$(MSBuildProjectDirectory)\Host\*.exe" Exclude="$(MSBuildProjectDirectory)\Host\*.config;$(MSBuildProjectDirectory)\Host\*.pdb;$(MSBuildProjectDirectory)\Host\*.xml">
			<Group>CONCENTRATOR</Group>
		  </Files>
		  <Files Include="$(MSBuildProjectDirectory)\Web\*" Exclude="$(MSBuildProjectDirectory)\Web\*.config;$(MSBuildProjectDirectory)\Web\*.pdb;$(MSBuildProjectDirectory)\Web\*.xml">
			<Group>CONCENTRATOR</Group>
		  </Files>
		  <Files Include="$(MSBuildProjectDirectory)\Plugin1\*.dll">
			<Group>CONCENTRATOR</Group>
		  </Files>
		  <Files Include="$(MSBuildProjectDirectory)\Plugin2\*.dll">
			<Group>CONCENTRATOR</Group>
		  </Files>
		  <Files Include="$(MSBuildProjectDirectory)\Plugin3\*.dll">
			<Group>CONCENTRATOR</Group>
		  </Files>
		  <OutputDirectory Include="output\" />
		</ItemGroup>
		<MakeDir Directories="@(OutputDirectory)" />
		<PropertyGroup>
		  <WorkingDir>%(OutputDirectory.Fullpath)</WorkingDir>
		  <ZipFileName>Release</ZipFileName>
		</PropertyGroup>
		<MSBuild.ExtensionPack.Compression.Zip TaskAction="Create" CompressFiles="@(Files)" CompressionLevel="BestCompression" ZipFileName="$(WorkingDir)$(ZipFileName)_$(BuildMajor).$(BuildMinor).$(BuildVersion).$(BuildRevision)_%(Files.Group).zip" />
	</Target>
	
	<Target Name="DD">	
		<Exec ContinueOnError="True" Command='$(MSBuildProjectDirectory)\tools\DD.exe /execute="$(ScriptLocation)" /target="$(IP):$(Port)" /token="$(Token)"'>
			<Output TaskParameter="ExitCode" PropertyName="ErrorCode"/>
		</Exec>		
		<Message Importance="high" Text="$(ErrorCode)"/>
	</Target>		
	
	<Target Name="SendEmail">
        <MSBuild.ExtensionPack.Communication.Email TaskAction="Send" Subject="Test Email" SmtpServer="yoursmtpserver" MailFrom="$(MailFrom)" MailTo="@(Recipient)" Body="body text" Attachments="@(Attachment)"/>		
	</Target>
</Project>














